
<div class="modal-dialog topnavbar">
	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	<%= f.error_notification %>
	<div class="modal-content">
		<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h4 class="modal-title" id="myModalLabel">忘记密码？</h4>
</div>
<div class="modal-body">

			<div class="form-inputs">
    		<%= f.input :email, required: true, autofocus: true, label: "邮箱" %>
  		</div>

  		<div class="form-actions">
    		<%= f.button :submit, "发送重设密码邮件", class: "btn btn-default pink" %>
  		</div>
			<div class="signuploginlinks" style="text-align:right;">
				<%= render "devise/shared/links" %>
			</div>
			</div>


	</div>
	<% end %>
</div>
